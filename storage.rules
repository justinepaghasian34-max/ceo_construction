rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Project files - organized by project ID
    match /projects/{projectId}/{allPaths=**} {
      allow read: if request.auth != null && (
        isAdmin() || 
        isCeoHead() || 
        hasProjectAccess(projectId)
      );
      allow write: if request.auth != null && (
        isAdmin() || 
        (isSiteManager() && hasProjectAccess(projectId))
      ) && isValidFileUpload();
    }
    
    // User profile images
    match /users/{userId}/profile/{fileName} {
      allow read, write: if request.auth != null && request.auth.uid == userId
        && isValidImageUpload();
    }
    
    // Daily report attachments
    match /daily_reports/{reportId}/{fileName} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && isSiteManager()
        && isValidFileUpload();
    }
    
    // Material delivery receipts
    match /deliveries/{deliveryId}/{fileName} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && isSiteManager()
        && isValidFileUpload();
    }
    
    // Helper functions
    function isAdmin() {
      return getUserRole() == 'admin';
    }
    
    function isSiteManager() {
      return getUserRole() == 'site_manager';
    }
    
    function isCeoHead() {
      return getUserRole() == 'ceo_head';
    }
    
    function getUserRole() {
      return firestore.get(/databases/(default)/documents/users/$(request.auth.uid)).data.role;
    }
    
    function hasProjectAccess(projectId) {
      let userData = firestore.get(/databases/(default)/documents/users/$(request.auth.uid)).data;
      return projectId in userData.assignedProjects;
    }
    
    function isValidFileUpload() {
      return request.resource.size < 10 * 1024 * 1024 // 10MB limit
        && (
          request.resource.contentType.matches('image/.*') ||
          request.resource.contentType.matches('application/pdf') ||
          request.resource.contentType.matches('application/msword') ||
          request.resource.contentType.matches('application/vnd.openxmlformats-officedocument.wordprocessingml.document')
        );
    }
    
    function isValidImageUpload() {
      return request.resource.size < 5 * 1024 * 1024 // 5MB limit for images
        && request.resource.contentType.matches('image/.*');
    }
  }
}
